{{#if this.products }}
<div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group ">
                {{#each products}}
                    <li class="list-group-item">
                        <span style="font-weight: bold; font-size: 20px;">{{this.item.title}}</span>
                        <span class="badge badge-success">${{this.price}}</span>
                        <div class="btn btn-group">
                            <button type="button" class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown"
                                    aria-haspopup="true" aria-expanded="false">
                                Action <span class="caret"></span>
                            </button>          
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <li><a class="dropdown-item" href="/reduce/{{this.item._id}}">Reduce by 1</a></li>
                                <li><a class="dropdown-item" href="/remove/{{this.item._id}}"">Remove All</a></li>
                            </ul>
                        </div>
                        <span class="badge badge-pill badge-dark">{{this.qty}}</span>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <strong style="font-size: 20px;">Total: ${{totalPrice}}</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <a href="/checkout"  type="button" class="btn btn-success">Checkout</a>
        </div>
    </div>
    {{else}}
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <h2>No Items in Cart yet! </h2>
        </div>
    </div>
{{/if}} 

