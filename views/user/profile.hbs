<h1>User Profile</h1>
<h3>My orders</h3>
{{# each orders }}
            <div class="panel panel-default">
                <div class="panel-body">
                    <ul class="list-group">
                        {{# each this.items }}
                            <li class="list-group-item">
                                <span class="badge badge-light">{{ this.price }}$</span>
                                <p>{{ this.item.title }} | {{ this.qty }} Units</p>
                            </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="panel-footer">
                    <strong>Total Price: ${{ this.cart.totalPrice }}</strong>
                    <hr>
                </div>
            </div>
        {{/each}}